/*============================================================================
  #Breakpoints
==============================================================================*/
$xs-max: 544px;
$sm-min: $xs-max + 1;
$sm-max: 767px;
$md-min: $sm-max + 1;
$md-max: 991px;
$lg-min: $md-max + 1;
$lg-max: 1199px;
$xl-min: $lg-max + 1;
/*============================================================================
  #Typography
==============================================================================*/
$font-family-default:        {{ settings.font_family }};
$font-family-heading:        {{ settings.heading_font_family }};
/*============================================================================
  #Colors
==============================================================================*/
$color-primary:              {{ settings.color_primary }};
$color-offset:               #faf9f7;
$gradient-1:                 {{ settings.gradient_color_1 }};
$gradient-2:                 {{ settings.gradient_color_2 }};

html, body {
  height: 100%;
  background: $color-offset;
}

body {
  font-family: $font-family-default;
  color: #222;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-family-heading;
}

p {
  font-size: .8rem;
}

a {
  color: $color-primary;
  &:hover {
    color: darken($color-primary, 20%);
    text-decoration: none;
  }
}

.footer {
  background: #fff;
  padding: 20px 0;
  img {
    height: 40px;
  }
  a {
    margin-right: 20px;
  }
}

.header {
  background: #fff;
  padding: 20px 0;
  border-bottom: 1px solid $color-offset;
  img {
    height: 40px;
  }
  a {
    margin-right: 20px;
  }
  .dropdown {
    &-menu {
      left: auto !important;
      right: 0;
    }
    img {
      border-radius: 50%;
    }
    a {
      display: block;
      padding: 5px 15px;
      margin-right: 0;
      font-size: 14px;
    }
  }
}

.powered-by {
  background: $color-offset;
  padding: 15px;
  text-align: center;
  font-size: 14px;
  a {
    color: #222;
  }
}

.section {
  background: #fff;
  padding: 20px 0;
  img {
    max-width: 100%;
  }
}

#index-wrap {
  padding-top: 60px;
}

#background {
  position: absolute;
  width: 100%;
  height: 450px;
  background-image: linear-gradient(45deg, $gradient-1, $gradient-2);
  z-index: 0;
}

#background svg {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 20vw;
}

.section.text-row {
  padding-bottom: 0;
}

.content-row .text-block:nth-child(odd) {
  padding: 20px 20px 20px 40px;
}  

.content-row .text-block:nth-child(even) {
  padding: 20px 40px 20px 20px;
}  

.align-items-center div {
  margin: 0 auto;
}

.image-center div {
  margin: 0 auto;
}

.image-left div {
  float: left;
}

.image-right div {
  float: right;
}

@media screen and (max-width: 767px) {

  .content-row .row {
    width: 100%;
    display: table;
    margin: 0 auto;
  }

  .content-row .image-block {
    display: table-header-group;
    padding: 20px
  }

  .content-row .text-block {
    display: table-footer-group;
    text-align: center;
  }

  .content-row .text-block:nth-child(odd),
  .content-row .text-block:nth-child(even) {
    padding: 20px;
  }  

  .content-row .text-block h1,
  .content-row .text-block h2,
  .content-row .text-block h3,
  .content-row .text-block h4,
  .content-row .text-block h5 {
    margin-top: 5px;
  }

}

@media screen and (max-width: 544px) {

  #background {
    height: 350px;
  }

}

@media screen and (min-width: 1200px) {

  #background {
    height: 600px;
  }

}
